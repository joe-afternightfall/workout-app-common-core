{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "lib": ["dom", "dom.iterable", "esnext"],
    "esModuleInterop": true,
     "module": "esnext",
    "target": "es6", // specify which version of JavaScript to compile our TypeScript to
     "outDir": "./dist", // specify where the compiled code will go
    "watch": false,
    "declaration": true, // enables automatic generation of ts declaration files
//    "declarationDir": "./core", // specify where the compiled code will go
//    "experimentalDecorators": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
//    "noEmit": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "strictFunctionTypes": true
  },
  "include": ["./src/"],
  "exclude": ["node_modules"] // specify directories to ignore when compiling
}