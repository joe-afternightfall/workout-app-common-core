{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "target": "es6", // specify which version of JavaScript to compile our TypeScript to
    "outDir": "./core", // specify where the compiled code will go
    "watch": false,
    "declaration": true, // enables automatic generation of ts declaration files
    "declarationDir": "./core", // specify where the compiled code will go
    "experimentalDecorators": true
  },
  "exclude": ["node_modules"] // specify directories to ignore when compiling
}